{
  "manifest_version": 3,
  "name": "FocusFlow",
  "version": "1.0.0",
  "description": "A Pomodoro timer to help you stay focused and productive",
  "permissions": [
    "storage",
    "notifications"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "FocusFlow Timer"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
} 